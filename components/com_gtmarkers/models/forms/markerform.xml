<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="title" filter="safehtml" type="text" class="form-control" required="true" message="This is a mandatory field, you must not leave it blank!" label="COM_GTMARKERS_FORM_LBL_MARKER_TITLE" description="COM_GTMARKERS_FORM_DESC_MARKER_TITLE" hint="COM_GTMARKERS_FORM_LBL_MARKER_TITLE"/>
    <field name="alias" type="text" class="inputbox" generator="title" label="COM_GTMARKERS_FORM_LBL_MARKER_ALIAS" description="COM_GTMARKERS_FORM_DESC_MARKER_ALIAS" hidden="true" hint="COM_GTMARKERS_FORM_LBL_MARKER_ALIAS"/>
    <field name="pos" filter="safehtml" type="text" class="form-control" label="COM_GTMARKERS_FORM_LBL_MARKER_POS" description="COM_GTMARKERS_FORM_DESC_MARKER_POS" hint="COM_GTMARKERS_FORM_LBL_MARKER_POS"/>
    <field name="timestamp" default="0000-00-00 00:00:00" label="COM_GTMARKERS_FORM_LBL_MARKER_TIMESTAMP" description="COM_GTMARKERS_FORM_DESC_MARKER_TIMESTAMP" hidden="true" hint="COM_GTMARKERS_FORM_LBL_MARKER_TIMESTAMP"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
